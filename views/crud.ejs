<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tasks</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <div class="container">
    <h1>Welcome, <%= username %> | <a href="/logout">Logout</a></h1>

    <h2>Create Task</h2>
    <form method="POST" action="/crud">
      <input type="text" name="title" placeholder="Title" required>
      <input type="text" name="description" placeholder="Description">
      <button type="submit">Add</button>
    </form>

    <h2>Search & Filter</h2>
    <form method="GET" action="/crud" class="search-form">
      <input type="text" name="search" placeholder="Search title..." value="<%= search %>">
      <select name="status">
        <option value="all" <%=status==='all' ?'selected':'' %>>All</option>
        <option value="pending" <%=status==='pending' ?'selected':'' %>>Pending</option>
        <option value="completed" <%=status==='completed' ?'selected':'' %>>Completed</option>
      </select>
      <select name="sort">
        <option value="newest" <%=sort==='newest' ?'selected':'' %>>Newest</option>
        <option value="oldest" <%=sort==='oldest' ?'selected':'' %>>Oldest</option>
      </select>
      <button type="submit">Apply</button>
    </form>

    <h2>Tasks</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (tasks.length===0) { %>
          <tr>
            <td colspan="4" class="text-center">No tasks</td>
          </tr>
          <% } else { tasks.forEach(t=> { %>
            <tr>
              <td data-label="Title">
                <%= t.title %>
              </td>
              <td data-label="Desc">
                <%= t.description || '-' %>
              </td>
              <td data-label="Status"><span class="<%= t.completed?'text-success':'text-danger' %>">
                  <%= t.completed?'Done':'Pending' %>
                </span></td>
              <td data-label="Actions">
                <a href="/crud/edit/<%= t._id %>" class="btn btn-edit btn-small">Edit</a>
                <form method="POST" action="/crud/update/<%= t._id %>" style="display:inline;">
                  <input type="hidden" name="completed" value="on">
                  <button type="submit" class="btn btn-complete btn-small">
                    <%= t.completed?'Undo':'Done' %>
                  </button>
                </form>
                <form method="POST" action="/crud/delete/<%= t._id %>" style="display:inline;"
                  onsubmit="return confirm('Delete?');">
                  <button type="submit" class="btn btn-delete btn-small">Delete</button>
                </form>
              </td>
            </tr>
            <% })} %>
      </tbody>
    </table>
    <footer>
      <p>© 2025 COMP3810SEF – Group 4</p>
    </footer>
  </div>
</body>

</html>